<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.MotoCare" parent="Theme.Material3.DayNight.NoActionBar">
         <item name="colorPrimary">@color/white</item>
         <item name="colorPrimaryVariant">@color/white</item>
         <item name="android:statusBarColor">@color/white</item>
         <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
         <item name="fontFamily">@font/outfit_regular</item>
    </style>

    <style name="Theme.MotoCare" parent="Base.Theme.MotoCare" />

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
    </style>

    <style name="NavMenuTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/outfit_semibold</item>
        <item name="android:textColor">#011c3b</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/outfit_semibold</item>
        <item name="android:textColor">@color/bluenavy</item>
    </style>
    
    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item  name="cornerSize">50%</item>
    </style>
    
</resources>